<h2><%= @constructor.name %></h2>
<p><%= @constructor.bio %></p>
<hr/>
<p><b>Puzzles constructed by <%= @constructor.name %>:</b></p>
<table style="width:100%">
  <tr>
    <th>Title</th>
    <th>Publication Date</th>
  </tr>
<%
  @puzzles_by_year.each_pair do |key, value|
    %>
      <tr>
	<td colspan="2" style="text-align:center"><p><b><%= key %></b></p></td>
      </tr>
      <%
      value.each do |p|
	%>
	<tr>
          <td><%= link_to p.title, puzzle_path(p) %></td>
          <td style="text-align:center"><%= p.publication_date %></td>	    
	</tr>
	<%
      end     
  end
%>
</table>

<hr/>

<h3>All Constructors</h3>
<ul>
<%
  Constructor.find(:all).each do |con|
    %><li><%= link_to con.name, constructor_path(con) %></li><%
  end
%>
</ul>

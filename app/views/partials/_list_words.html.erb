<table class="large_list_table" id="word_appearances_table">
  <tr>
    <th>Word</th>
    <th>Clue</th>
    <th>Constructor(s)</th>
    <th>Puzzle</th>
    <th>Source</th>
  </tr>
  <%
    row_color = "light"
    word_list.each do |e|
      %>
	<tr class="llt_<%= row_color %>">
	  <td class="llt_answer_word">
            <div class="puzzle_link" id="<%= e.puzzle.seq_no %>">
                <%= link_to e.answer, puzzle_path(e.puzzle.seq_no) %>
                <div class="popup_puzzle" id ="<%= e.puzzle.seq_no %>">Loading...</div>
            </div>
	  </td>
          <td class="llt_left"><%= e.clue.html_safe %></td>
          <td>
	  <%
            e.puzzle.constructors.each do |c|
              if c.eql?(e.puzzle.constructors.last) && e.puzzle.constructors.size > 1
                %> and<%
              end
              %> <%= link_to c.name, constructor_path(c) %><%
              if e.puzzle.constructors.size > 2 && !c.eql?(e.puzzle.constructors.last)
                %>,<%
              end
            end
	  %>
          </td>
          <td>
            <div class="puzzle_link" id="<%= e.puzzle.seq_no %>">
                <%= link_to e.puzzle.title, puzzle_path(e.puzzle.seq_no) %>
                <div class="popup_puzzle" id ="<%= e.puzzle.seq_no %>">Loading...</div>
            </div>
          <td><%= link_to e.puzzle.sources.first.display_name, source_path(e.puzzle.sources.first) %></td>
        </tr>
      <%
      if row_color.eql?("dark")
        row_color = "light"
      elsif row_color.eql?("light")
        row_color = "dark"
      end
    end
  %>
</table>



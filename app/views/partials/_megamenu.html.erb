<div id="megamenu">
  <div id="search_bar">
    <%= form_tag "/search", :method => :get, :id => 'search_form' do %>
      <%= text_field_tag :search, params[:search]%>
    <% end %>
  </div>
  <a href="#" id="black_megamenu_square">?</a>
  <ul id="nav">
    <li>
	<%= link_to 'Home', root_path %>
    </li>
    <li>
	<%= link_to 'About', about_path %>
	<ul>
	  <li><a href="#">About page</a></li>
	  <li><a href="#">FAQs</a></li>
	</ul>
    </li>
    <li>
	<%= link_to 'Sources', sources_path %>
	<!--<a href="#">Sources</a>-->
	<ul>
	  <%
	    Source.find(:all).each do |src|
	      if src.display_name.nil?
		%><li><%= link_to src.name, source_path(src) %></li><%
	      else
		%><li><%= link_to src.display_name, source_path(src) %></li><%
	      end
	    end
	  %>
	</ul>
    </li>
    <li>
	<%= link_to 'Constructors', constructors_path %></li>
    </li>
    <li>
	<%= link_to 'Puzzles', puzzles_path %></li>
    </li>
  </ul>

  <a href="#" id="logo">CROSS EXAMINATION</a>


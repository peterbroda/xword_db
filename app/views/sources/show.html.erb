<% 
  if @source.display_name.nil?
    provide(:title, @source.name)
  else
    provide(:title, @source.display_name)
  end
%>

<div class="source_record">


<h2><%= @source.name %></h2>
<%= link_to "Homepage", @source.url %>
<p><%= @source.description %></p>

<hr/>

<p><b>Constructors associated with <%= @source.name %></b></p>
<ul>
<%
  @source.constructors.each do |con|
    %><li><%= link_to con.name, constructor_path(con) %></li><%
  end
%>
</ul>

<hr/>

<p><b>Puzzles from <%= @source.name %>:</b></p>

<%= render partial: "/partials/list_puzzles", locals: {puzzles_by_year: @puzzles_by_year, page_source: "source"} %>

</div>
